{% extends 'template.html.twig' %}

{% block title %}{{ 'Meta_Title_Detail_Trick'|trans({'name' : trick.name }) }}{% endblock %}

{% block body %}
    <div class="page-header header-filter" style="background-image: url({{ asset
        ('pictures/background.jpg')
    }})">
        <div class="container">
            <div class="row">
                <div class="col-md-8 ml-auto mr-auto">
                    <div class="brand text-center">
                        <h1>{{ trick.name }}</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <section class="main main-raised alt-main main-describe">
        <div class="section-header-trick page-header" style="background: url({{ asset
            ('upload_directory/'~trick.picture) }}) no-repeat center center;">
        </div>
        <div class="section section-basic">
            <div class="container">
                <div class="row justify-content-md-center">
                    <div class="col-md-10">
                        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                {% set i = 0 %}
                                {% for picture in trick.pictures %}
                                    {% set i = i + 1 %}
                                    {% if i == 1 %}
                                        <li data-target="#carouselExampleIndicators" data-slide-to="{{ i - 1 }}"
                                            class="active"></li>
                                    {% else %}
                                        <li data-target="#carouselExampleIndicators" data-slide-to="{{ i - 1 }}"></li>
                                    {% endif %}
                                {% endfor %}
                            </ol>
                            <div class="carousel-inner">
                                {% set j = 0 %}
                                {% for picture in trick.pictures %}
                                    {% set j = j + 1 %}
                                    {% if j == 1 %}
                                        <div class="carousel-item active">
                                            <img class="d-block w-100" src="{{ asset('upload_directory/'~picture.fileName) }}" alt="carousel image">
                                        </div>
                                    {% else %}
                                        <div class="carousel-item">
                                            <img class="d-block w-100" src="{{ asset('upload_directory/'~picture.fileName) }}" alt="carousel image">
                                        </div>
                                    {% endif %}
                                {% endfor %}
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                    <div class="col-md-10">
                        {{ trick.description|raw }}
                    </div>
                    <div class="col-md-10 text-center">
                        <span class="badge badge-pill badge-secondary">{{ trick.category.name }}</span>
                        <span class="badge badge-pill badge-secondary">{{ 'Trick_Date_Created'|trans }} : {{ trick.date|date('d-m-Y') }} - {{ trick.date|date('H:i') }}</span>
                    </div>
                </div>
                <hr>
            </div>
        </div>
        <hr>
    </section>
{% endblock %}