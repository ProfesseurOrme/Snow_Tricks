{% extends 'template.html.twig' %}

{% block title %}{{ 'Meta_Title_Home'|trans }}{% endblock %}

{% block body %}

<div class="page-header header-filter" style="background-image: url({{ asset('pictures/background.jpg') }})">
    <div class="container">
        <div class="row">
            <div class="col-md-8 ml-auto mr-auto">
                <div class="brand">
                    <h1>Snow Tricks</h1>
                    <h3>{{ 'Home_Title_Description'|trans }}</h3>
                </div>
            </div>
        </div>
    </div>
</div>
<section id="trick" class="main homepage">
    <div class="container">
        <div class="col-md-12">
            {% for trick in tricks %}
                <div class="card" style="width: 20rem;">
                    <img class="card-img-top" src="{{ asset('upload_directory/'~ trick.picture) }}" rel="nofollow" alt="Card image cap">
                    <div class="card-body">
                        <p>{{ trick.description|slice(0, 100)|escape }} ... </p>
                    </div>
                </div>
            {% endfor %}
            </div>
        </div>
    </div>
</section>


{% endblock %}
