{% extends 'template.html.twig' %}

{% block title %}{{ 'SignUp_Title'|trans }}{% endblock %}
{% block body %}
<div class="page-header page-register header-filter" style="background-image: url({{ asset('pictures/background.jpg')
}})">
    <div class="container">
        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="card text-center">
                    <div class="card-body">
                        {{ form_start(registrationForm) }}
                            <h3>{{ 'SignUp_Title_Form'|trans }}</h3>
                            {% if not registrationForm.vars.valid %}
                                <div class="alert alert-danger">
                                    <div class="container">
                                        <div class="alert-icon">
                                            <i class="material-icons">error_outline</i>
                                        </div>
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true"><i class="material-icons">clear</i></span>
                                        </button>
                                        {% for child in registrationForm.children %}
                                            {% for error in child.vars.errors %}
                                                <li>{{ error.message }}</li>
                                            {% endfor %}
                                        {% endfor %}
                                    </div>
                                </div>
                            {% endif %}
                            <div class="form-group">
                                <label for="{{ 'SignUp_Username_Label_For'|trans }}">{{ 'SignUp_Username_Label'|trans }} : </label>{{ form_widget(registrationForm.username, {'id' : 'input-username' ,'attr': {'class':'form-control', 'placeholder' : 'SignUp_Username_Placeholder','data-search' : path('app_search_user') }}) }}
                                <small id="usernameHelp" class="form-text text-muted"></small>
                            </div>
                            <div class="form-group">
                                <label for="{{ 'SignUp_Email_Label_For'|trans }}">{{ 'SignUp_Email_Label'|trans }} : </label>
                                {{ form_widget(registrationForm.email, {'attr' : {'class': 'form-control', 'placeholder' : 'SignUp_Email_Placeholder'}}) }}
                                <small id="emailHelp" class="form-text text-muted"></small>
                            </div>
                            <div class="form-group">
                                <label for="{{ 'SignUp_Password_Label_For'|trans }}">{{ 'SignUp_Password_Label'|trans }} : </label>
                                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control' , 'placeholder' : 'SignUp_Password_Placeholder'}}) }}
                                <small id="passwordHelp" class="form-text text-muted"></small>
                            </div>
                            <button id="button_register" type="submit" class="btn btn-dark-blue" disabled>{{ 'SignUp_Button_Create'|trans }}</button>
                        {{ form_end(registrationForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('register') }}
{% endblock %}
